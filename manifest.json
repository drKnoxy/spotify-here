{
  "manifest_version": 2,

  "name": "Spotify Here",
  "description": "Replace spotify urls with nice embeds",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "hallo"
  },
  "content_scripts": [{
    "matches": ["https://*/*"],
    "js": ["contentscript.js"]
  }],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    // "webRequest",
    "https://open.spotify.com/"
  ]
}